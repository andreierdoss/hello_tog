<h2><%= I18n.t("member.oracle.questions.edit.page_header", :title => @question.title) %></h2>
<% form_for :question, @question, :url => member_oracle_question_path(@question), :html => { :method => :put } do |f| -%>
  <p>
    <%= f.label :title, I18n.t("member.oracle.questions.edit.title") %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body, I18n.t("member.oracle.questions.edit.body") %>
    <%= f.text_area :body, :cols => 40, :rows => 5 %>
  </p>
  <p>
    <%= f.label :tag_list, I18n.t("member.oracle.questions.edit.tags") %>
    <%= f.text_field :tag_list %><br />
    <span class="helpinfo">(<%= I18n.t("oracle.common.separated_by_commas") %>)</span>
  </p>    
  <%= f.submit I18n.t("member.oracle.questions.edit.save") %>
<% end -%>